{
  "manifest_version": 3,
  "name": "DOM to FIGMA JSON",
  "version": "1.0",
  "description": "웹페이지 DOM을 Figma용 JSON으로 추출",
  "permissions": ["activeTab", "clipboardWrite", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "image/icon16.png",
      "32": "image/icon32.png",
      "48": "image/icon48.png",
      "128": "image/icon128.png"
    }
  },
  "icons": {
    "16": "image/icon16.png",
    "48": "image/icon48.png",
    "128": "image/icon128.png"
  }
}
